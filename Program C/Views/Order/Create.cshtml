
@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center shadow p-4 mb-3 shadow">Index</h1>
<form action="/Order/Create" method="post">
    <label for="inputID">編號:</label>
    <input type="text" id="inputID" name="inputID" value="" class="form-control" />
    <label for="inputName">名稱:</label>
    <input type="text" id="inputName" name="inputName" value="" class="form-control" />
    <label for="inputPrice">價格:</label>
    <input type="text" id="inputPrice" name="inputPrice" value="" class="form-control" />

    <input type="submit" value="確認新增" class="btn btn-primary"/>
	<input type="reset" value="清除" class="btn btn-danger" />
</form>

<div> 
@ViewData["inputID"]
@ViewData["inputName"]
@ViewData["inputPrice"]
</div>