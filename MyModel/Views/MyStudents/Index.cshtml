@model IEnumerable<MyModel.Models.tStudent>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
				@Html.DisplayNameFor(model => model.fStuId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fScore)
            </th>
            <th>
				@Html.DisplayNameFor(model => model.Department.DepartName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
				@Html.DisplayFor(modelItem => item.fStuId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fScore)
            </td>
            <td>
					@Html.DisplayFor(modelItem => item.Department.DepartName) (@Html.DisplayFor(modelItem => item.departID))
            </td>
            <td class="d-flex">
                <a asp-action="Edit" asp-route-id="@item.fStuId" class="btn btn-warning">編輯</a> |
                <form asp-action="Delete">
						<input type="hidden" name="id" value="@item.fStuId" />
						<button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure to delete ?')">刪除</button>
                </form>
                
            </td>
        </tr>
}
    </tbody>
</table>
